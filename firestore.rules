rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() &&
             exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // USERS collection
    match /users/{userId} {
      allow read, write: if isSignedIn() && (request.auth.uid == userId || isAdmin());
    }

    // SUBMISSIONS collection
    match /submissions/{docId} {
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      allow read, update, delete: if isSignedIn() && (resource.data.uid == request.auth.uid || isAdmin());
    }

    // ADMINS collection
    match /admins/{uid} {
      allow read: if isAdmin();
      allow write: if false; // you must manually add admins from Firebase Console
    }
  }
}
